<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPivxLogo"
        android:layout_width="64sp"
        android:layout_height="64sp"
        app:srcCompat="@drawable/pivx_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8sp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Може да дарите PIVX на този адрес:"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivPivxLogo"/>

    <ImageView
        android:id="@+id/qrCodeImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8sp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/donate_address" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Адресът ще бъде копиран в системния буфер при клик на QR кода."
        android:padding="8sp"
        android:textAlignment="center"
        android:layout_below="@+id/qrCodeImg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8sp"/>

</RelativeLayout>